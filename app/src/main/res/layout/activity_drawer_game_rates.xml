<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DrawerGameRates">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_page"
            android:alpha=".5"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:textSize="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Rates"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"

                />


        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold|italic"

                android:text="JANNAT ONLINE GAME RATES"/>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_below="@id/cardView0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:elevation="16dp"
                >

                <TextView
                    android:id="@+id/txtsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"

                    android:text="Single Paana : 10 - 1600"/>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
                 android:layout_below="@id/cardView1"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp">

            <TextView
                android:id="@+id/txtdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Double Paana : 10 - 3200"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/cardView2"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:id="@+id/txttp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Triple Paana : 10 - 8000"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView3"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:id="@+id/txtsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Single Digit : 10 - 100"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView4"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >

            <TextView
                android:id="@+id/txtjd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Jodi Digit : 10 - 1000"
                android:textColor="@color/iconColor"
                android:textSize="20dp"

                android:textStyle="bold|italic" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView5"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:id="@+id/txtrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Red Brackets : 10 - 1000"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            
            android:id="@+id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView6"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:id="@+id/txths"

                android:text="Half Sangam Digit : 10 - 10,000"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/cardView8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView7"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:id="@+id/txtfs"
                android:textStyle="bold|italic"

                android:text="Full Sangam Digit : 10 - 100,000"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView11"
            android:layout_below="@id/cardView8"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="15dp"
                android:textStyle="bold|italic"

                android:text="JANNAT STARLINE GAME RATES"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView12"
            android:layout_below="@id/cardView11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >

            <TextView
                android:id="@+id/txts_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Single Paana : 10 - 160"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView13"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cardView12"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp">

            <TextView
                android:id="@+id/txts_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Double Paana : 10 - 3200"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView14"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/cardView13"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:id="@+id/txts_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Triple Paana : 10 - 8000"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView15"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardView14"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="16dp"
            >
            <TextView
                android:id="@+id/txts_sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/iconColor"
                android:textSize="20dp"
                android:textStyle="bold|italic"

                android:text="Single Digit : 10 - 100"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
        </ScrollView>
</RelativeLayout>
    </RelativeLayout>