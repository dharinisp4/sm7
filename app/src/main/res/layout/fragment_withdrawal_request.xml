<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPointsFragment"
    android:background="@drawable/background">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page"
    android:alpha=".5"/>


    <RelativeLayout
        android:id="@+id/relWallet_1"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:padding="20dp">

            <ImageView
                android:id="@+id/w_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_account_balance_wallet_black_24dp"
                />
            <TextView
                android:id="@+id/wallet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/w_img"
                android:paddingRight="5dp"
                android:text="200"
                android:layout_centerVertical="true"
                android:textColor="@color/textColor"
                android:textSize="20dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relWallet"
            android:gravity="center_vertical"
           >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account_balance_wallet_black_24dp"
                android:backgroundTint="@color/iconColor"/>



        <EditText
            android:id="@+id/etRequstPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_centerVertical="true"
            android:background="@drawable/dialog_edittext_design"
            android:textSize="18dp"
            android:padding="10dp"
            android:hint="Enter Points"
            android:gravity="left"
            android:textColorHint="@color/iconColor"
            android:textColor="@color/iconColor"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            />
        </RelativeLayout>
        <Button
            android:id="@+id/add_Request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Request"
            android:textAllCaps="false"
            android:background="@drawable/shape2"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@id/linerLayout"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"

            />
    </RelativeLayout>
</RelativeLayout>