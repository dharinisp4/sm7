<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPointsFragment"
    android:background="@drawable/background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_page"
        android:alpha=".5"/>


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">



        <EditText
            android:id="@+id/etRequstPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design_reg"
            android:textSize="18dp"
            android:padding="10dp"
            android:hint="Enter Points"
            android:gravity="left"
            android:textColorHint="@color/iconColor"
            android:textColor="@color/iconColor"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/add_Request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Request"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_below="@id/etRequstPoints"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"

            />
    </RelativeLayout>
</RelativeLayout>