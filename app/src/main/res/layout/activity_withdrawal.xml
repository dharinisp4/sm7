<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawalActivity"
    android:background="@drawable/background"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradients_background"
        android:alpha=".5"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"/>

            <TextView
                android:id="@+id/board"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Withdraw Funds"
                android:layout_toRightOf="@id/txtBack"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:textSize="17dp"
                android:textColor="@color/textColor"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout"
        android:layout_marginTop="120dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview1"
            android:text="JANNAT ONLINE GAMES"
            android:textSize="32dp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview2"
            android:layout_below="@+id/textview1"
            android:text="Withdrawal Requesting Time Is 10:00am To 3:00pm. The Amount Will Be Credited To Your Bank Account In Between 10:00am To 5:00pm Within 24hrs From Request. "
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview3"
            android:layout_below="@+id/textview2"
            android:text="For Withdraw Related Querys"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview4"
            android:layout_below="@+id/textview3"
            android:text="Call Or Whats App"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageview"
            android:layout_below="@+id/textview4"
            android:layout_marginTop="5dp"
            android:background="@drawable/telephoneicon"
            android:backgroundTint="@color/greenColor"
            android:visibility="gone"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview5"
            android:layout_below="@+id/textview4"
            android:layout_toRightOf="@+id/imageview"
            android:layout_marginLeft="3dp"
            android:text="8889114346"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:visibility="gone"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview6"
            android:layout_below="@+id/textview5"
            android:text="(Timing 10:00AM To 05:00PM)"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relWallet_1"
        android:layout_centerVertical="true"
        android:layout_below="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_edittext_design"
            android:backgroundTint="@color/iconColor"
            android:layout_centerHorizontal="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/w_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_account_balance_wallet_black_24dp"
                />
            <TextView
                android:id="@+id/wallet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/w_img"
                android:layout_marginTop="2dp"
                android:paddingRight="5dp"
                android:text=" Loading.."
                android:textColor="@color/textColor"
                android:textSize="15dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relWallet"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fund"
                android:backgroundTint="@color/iconColor"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/etRequstPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_edittext_design"
            android:textSize="18dp"
            android:padding="10dp"
            android:hint="Enter Points"
            android:gravity="left"
            android:textColorHint="@color/iconColor"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_below="@id/relWallet"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/add_Request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Request"
            android:textAllCaps="false"
            android:background="@drawable/dialog_buttons"
            android:layout_below="@id/etRequstPoints"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"

            />
    </RelativeLayout>
</RelativeLayout>