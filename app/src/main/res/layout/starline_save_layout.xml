<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/background_page"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#faac01"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digits"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Type"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relTable"
        android:layout_below="@+id/relHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="@android:color/transparent">
        <ScrollView
            android:layout_width="300dp"
            android:layout_height="300dp"

            android:scrollbars="vertical">
            <TableLayout
                android:id="@+id/tblLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                >




                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"

                    android:textAlignment="center"
                    android:layout_marginTop="20dp"

                    >


                    <TextView
                        android:id="@+id/pnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        android:layout_toRightOf="@+id/dgt"

                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_toRightOf="@id/pnt"
                        android:layout_marginLeft="70dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/del"
                        android:layout_width="50dp"
                        android:layout_height="20dp"

                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="70dp"
                        />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/del"
                        />

                </TableRow>

            </TableLayout>


        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:text="Total Bids "/>
            <TextView
                android:id="@+id/txtCountBids"
                android:layout_toRightOf="@id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10dp"
                android:text="Total "/>
            <TextView
                android:id="@+id/txt2"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/txtCountBids"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:text="Total Bids Amount"/>
            <TextView
                android:id="@+id/txtAmount"
                android:layout_toRightOf="@id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"

                android:textColor="@color/textColor"
                android:layout_marginLeft="10dp"
                android:text="Total "/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/textColor"
                android:text="Wallet Before Deduction "/>
            <TextView
                android:id="@+id/txtBeforeAmount"
                android:layout_toRightOf="@id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10dp"
                android:text="Total "/>
            <TextView
                android:id="@+id/txt4"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/txtBeforeAmount"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:text="Wallet After Deduction"/>
            <TextView
                android:id="@+id/txtAfterAmount"
                android:layout_toRightOf="@id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"

                android:textColor="@color/textColor"
                android:layout_marginLeft="10dp"
                android:text="Total "/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_below="@id/relativeLayout2"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="*Note Bid Once Played will not be cancelled*"/>

        <LinearLayout
            android:layout_below="@id/txtNote"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:background="#005308"
                android:text="Ok"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="2dp"
                android:text="Cancel"/>
        </LinearLayout>
    </RelativeLayout>







</LinearLayout>